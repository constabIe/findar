{
  "title": "Findar - Fraud Detection System Overview",
  "uid": "system-overview",
  "version": 2,
  "editable": true,
  "timezone": "browser",
  "refresh": "10s",
  "time": {
    "from": "now-1h",
    "to": "now"
  },
  "panels": [
    {
      "id": 1,
      "title": "Total Transactions",
      "type": "stat",
      "gridPos": {
        "h": 6,
        "w": 4,
        "x": 0,
        "y": 0
      },
      "targets": [
        {
          "expr": "sum(transactions_total)",
          "legendFormat": "Total"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "thresholds"
          },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "green",
                "value": null
              }
            ]
          }
        }
      }
    },
    {
      "id": 2,
      "title": "Suspicious Transactions",
      "type": "stat",
      "gridPos": {
        "h": 6,
        "w": 4,
        "x": 4,
        "y": 0
      },
      "targets": [
        {
          "expr": "sum(transactions_total{status=\"alerted\"})",
          "legendFormat": "Alerted"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "thresholds"
          },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "green",
                "value": null
              },
              {
                "color": "yellow",
                "value": 10
              },
              {
                "color": "red",
                "value": 50
              }
            ]
          }
        }
      }
    },
    {
      "id": 3,
      "title": "Rejected Transactions",
      "type": "stat",
      "gridPos": {
        "h": 6,
        "w": 4,
        "x": 8,
        "y": 0
      },
      "targets": [
        {
          "expr": "sum(transactions_total{status=\"rejected\"})",
          "legendFormat": "Rejected"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "thresholds"
          },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "green",
                "value": null
              },
              {
                "color": "orange",
                "value": 5
              },
              {
                "color": "red",
                "value": 20
              }
            ]
          }
        }
      }
    },
    {
      "id": 4,
      "title": "Notifications Sent",
      "type": "stat",
      "gridPos": {
        "h": 6,
        "w": 4,
        "x": 12,
        "y": 0
      },
      "targets": [
        {
          "expr": "sum(notifications_sent_total{status=\"sent\"})",
          "legendFormat": "Sent"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "thresholds"
          },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "blue",
                "value": null
              }
            ]
          }
        }
      }
    },
    {
      "id": 5,
      "title": "Requests per Second",
      "type": "graph",
      "gridPos": {
        "h": 8,
        "w": 8,
        "x": 0,
        "y": 6
      },
      "targets": [
        {
          "expr": "rate(transactions_total[1m])",
          "legendFormat": "{{status}}"
        }
      ],
      "yaxes": [
        {
          "label": "req/s",
          "format": "short"
        }
      ]
    },
    {
      "id": 6,
      "title": "Transaction Processing Time (p95)",
      "type": "graph",
      "gridPos": {
        "h": 8,
        "w": 8,
        "x": 8,
        "y": 6
      },
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum(rate(transaction_processing_duration_seconds_bucket[5m])) by (le))",
          "legendFormat": "p95"
        },
        {
          "expr": "histogram_quantile(0.50, sum(rate(transaction_processing_duration_seconds_bucket[5m])) by (le))",
          "legendFormat": "p50"
        }
      ],
      "yaxes": [
        {
          "label": "seconds",
          "format": "s"
        }
      ]
    },
    {
      "id": 7,
      "title": "Transactions by Status",
      "type": "piechart",
      "gridPos": {
        "h": 8,
        "w": 8,
        "x": 16,
        "y": 6
      },
      "targets": [
        {
          "expr": "sum by (status) (transactions_total)",
          "legendFormat": "{{status}}"
        }
      ]
    },
    {
      "id": 8,
      "title": "Rule Matches by Type",
      "type": "graph",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 14
      },
      "targets": [
        {
          "expr": "sum by (rule_type) (rate(rules_matched_total[5m]))",
          "legendFormat": "{{rule_type}}"
        }
      ],
      "yaxes": [
        {
          "label": "matches/s",
          "format": "short"
        }
      ]
    },
    {
      "id": 9,
      "title": "Top 10 Triggered Rules",
      "type": "bargauge",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 14
      },
      "targets": [
        {
          "expr": "topk(10, sum by (rule_id, rule_type) (rate(rules_matched_total[5m])))",
          "legendFormat": "{{rule_type}}: {{rule_id}}"
        }
      ],
      "options": {
        "orientation": "horizontal",
        "displayMode": "gradient"
      }
    },
    {
      "id": 10,
      "title": "Notifications by Channel",
      "type": "graph",
      "gridPos": {
        "h": 8,
        "w": 8,
        "x": 0,
        "y": 22
      },
      "targets": [
        {
          "expr": "sum by (channel) (rate(notifications_sent_total{status=\"sent\"}[5m]))",
          "legendFormat": "{{channel}}"
        }
      ],
      "yaxes": [
        {
          "label": "notifications/s",
          "format": "short"
        }
      ]
    },
    {
      "id": 11,
      "title": "Notification Delivery Success Rate",
      "type": "gauge",
      "gridPos": {
        "h": 8,
        "w": 8,
        "x": 8,
        "y": 22
      },
      "targets": [
        {
          "expr": "sum(notifications_sent_total{status=\"sent\"}) / sum(notifications_sent_total) * 100",
          "legendFormat": "Success Rate"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "min": 0,
          "max": 100,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "red",
                "value": null
              },
              {
                "color": "yellow",
                "value": 80
              },
              {
                "color": "green",
                "value": 95
              }
            ]
          }
        }
      }
    },
    {
      "id": 12,
      "title": "Notification Delivery Time",
      "type": "graph",
      "gridPos": {
        "h": 8,
        "w": 8,
        "x": 16,
        "y": 22
      },
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum by (channel, le) (rate(notification_delivery_duration_seconds_bucket[5m])))",
          "legendFormat": "{{channel}} p95"
        }
      ],
      "yaxes": [
        {
          "label": "seconds",
          "format": "s"
        }
      ]
    },
    {
      "id": 13,
      "title": "Rule Evaluation Performance",
      "type": "graph",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 30
      },
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum by (rule_type, le) (rate(rule_execution_duration_seconds_bucket[5m])))",
          "legendFormat": "{{rule_type}} p95"
        },
        {
          "expr": "histogram_quantile(0.50, sum by (rule_type, le) (rate(rule_execution_duration_seconds_bucket[5m])))",
          "legendFormat": "{{rule_type}} p50"
        }
      ],
      "yaxes": [
        {
          "label": "seconds",
          "format": "s"
        }
      ]
    },
    {
      "id": 14,
      "title": "CPU Usage",
      "type": "gauge",
      "gridPos": {
        "h": 8,
        "w": 6,
        "x": 12,
        "y": 30
      },
      "targets": [
        {
          "expr": "100 - (avg by(instance) (irate(node_cpu_seconds_total{mode=\"idle\"}[5m])) * 100)"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "min": 0,
          "max": 100,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "green",
                "value": null
              },
              {
                "color": "yellow",
                "value": 60
              },
              {
                "color": "red",
                "value": 80
              }
            ]
          }
        }
      }
    },
    {
      "id": 15,
      "title": "Memory Usage",
      "type": "gauge",
      "gridPos": {
        "h": 8,
        "w": 6,
        "x": 18,
        "y": 30
      },
      "targets": [
        {
          "expr": "(node_memory_MemTotal_bytes - node_memory_MemAvailable_bytes) / node_memory_MemTotal_bytes * 100"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "min": 0,
          "max": 100,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "green",
                "value": null
              },
              {
                "color": "yellow",
                "value": 70
              },
              {
                "color": "red",
                "value": 85
              }
            ]
          }
        }
      }
    },
    {
      "id": 16,
      "title": "Queue Processing Tasks",
      "type": "graph",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 38
      },
      "targets": [
        {
          "expr": "queue_pending_tasks",
          "legendFormat": "Pending - {{queue_name}}"
        },
        {
          "expr": "queue_processing_tasks",
          "legendFormat": "Processing"
        }
      ],
      "yaxes": [
        {
          "label": "tasks",
          "format": "short"
        }
      ]
    },
    {
      "id": 17,
      "title": "Error Rate",
      "type": "graph",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 38
      },
      "targets": [
        {
          "expr": "sum by (error_type) (rate(queue_errors_total[5m]))",
          "legendFormat": "{{error_type}}"
        }
      ],
      "yaxes": [
        {
          "label": "errors/s",
          "format": "short"
        }
      ]
    }
  ]
}
