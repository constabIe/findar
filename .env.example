# PostgreSQL Database
POSTGRES_DB=findar
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# Optional: Override auto-generated async URL
# POSTGRES_ASYNC_URL=postgresql+asyncpg://user:password@host:port/db

# PgAdmin (Database Management UI)
PGADMIN_DEFAULT_EMAIL=admin@findar.local
PGADMIN_DEFAULT_PASSWORD=admin
PGADMIN_PORT=5050

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=password

# Backend API
BACKEND_HOST=localhost
BACKEND_PORT=8001
HOST=localhost
APP_PORT=8000


# JWT Authentication
# Important!!! Generate strong key
SECRET_KEY=your-secret-key-please-change-in-production-at-least-32-characters-long
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440


# Logging
LEVEL=INFO
JSON_FORMAT=false
ENABLE_CONSOLE=true
ENABLE_FILE=false
FILE_PATH=logs/findar.log

# Monitoring & Observability
# Grafana
GF_SECURITY_ADMIN_USER=admin
GF_SECURITY_ADMIN_PASSWORD=admin
GF_PORT=3000

# Prometheus
PROMETHEUS_PORT=9090

# Alertmanager
AM_PORT=9093

# Node Exporter
NE_PORT=9100

# cAdvisor
CADVISOR_PORT=8081

# Loki
LOKI_PORT=3100

# Telegram Bot Token
TELEGRAM_BOT_TOKEN=token_here

# Email service
EMAIL_SMTP_USER=user

# Frontend
FRONTEND_PORT=8080
